# ===================================
# FRONTEND TRANSCRIPTION CONFIGURATION
# ===================================

# ===== BACKEND CONNECTION =====
# Backend WebSocket URL (force IPv4)
VITE_BACKEND_WS_URL=ws://127.0.0.1:3000

# Backend HTTP API URL (force IPv4)
VITE_BACKEND_API_URL=http://127.0.0.1:3000

# Connection timeout (milliseconds)
VITE_CONNECTION_TIMEOUT=10000

# ===== WEBSOCKET CONFIGURATION =====
# WebSocket reconnection delay (milliseconds)
VITE_WS_RECONNECT_DELAY=3000

# Maximum reconnection attempts
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

# WebSocket ping interval (milliseconds) - increased for file processing
VITE_WS_PING_INTERVAL=120000

# WebSocket message timeout (milliseconds) - increased for file processing
VITE_WS_MESSAGE_TIMEOUT=300000

# ===== AUDIO CONFIGURATION =====
# Target sample rate for audio processing (Hz)
VITE_TARGET_SAMPLE_RATE=16000

# Audio buffer size for processing
VITE_AUDIO_BUFFER_SIZE=4096

# Audio chunk size for streaming (bytes)
VITE_AUDIO_CHUNK_SIZE=4096

# Maximum recording duration (seconds)
VITE_MAX_RECORDING_DURATION=3600

# Audio quality setting (low, medium, high)
VITE_AUDIO_QUALITY=medium

# ===== FILE UPLOAD =====
# Maximum file size for upload (MB)
VITE_MAX_FILE_SIZE_MB=50

# Accepted audio file formats (comma-separated)
VITE_ACCEPTED_AUDIO_FORMATS=.wav,.mp3,.m4a,.ogg,.webm

# Upload timeout (milliseconds)
VITE_UPLOAD_TIMEOUT=300000

# Upload chunk size (bytes)
VITE_UPLOAD_CHUNK_SIZE=4096

# ===== AUTHENTICATION =====
# JWT token for authentication (test token for development)
VITE_JWT_TOKEN=test-token

# Enable authentication (true/false) - DISABLED FOR TESTING
VITE_ENABLE_AUTHENTICATION=false

# Token refresh interval (milliseconds)
VITE_TOKEN_REFRESH_INTERVAL=3600000

# ===== UI CONFIGURATION =====
# Auto-start recording on component mount (true/false)
VITE_AUTO_START_RECORDING=false

# Show real-time transcription (true/false)
VITE_SHOW_REALTIME_TRANSCRIPTION=true

# Maximum transcriptions to display
VITE_MAX_TRANSCRIPTIONS_DISPLAY=100

# Auto-scroll to latest transcription (true/false)
VITE_AUTO_SCROLL_TRANSCRIPTIONS=true

# Show transcription timestamps (true/false)
VITE_SHOW_TRANSCRIPTION_TIMESTAMPS=true

# Show session metadata (true/false)
VITE_SHOW_SESSION_METADATA=true

# ===== DOWNLOAD/EXPORT =====
# Default download format (json, txt, csv)
VITE_DEFAULT_DOWNLOAD_FORMAT=json

# Include metadata in downloads (true/false)
VITE_INCLUDE_METADATA_IN_DOWNLOADS=true

# Default filename prefix for downloads
VITE_DOWNLOAD_FILENAME_PREFIX=transcription

# ===== ERROR HANDLING =====
# Show detailed error messages (true/false)
VITE_SHOW_DETAILED_ERRORS=true

# Error message timeout (milliseconds)
VITE_ERROR_MESSAGE_TIMEOUT=5000

# Retry failed operations automatically (true/false)
VITE_AUTO_RETRY_FAILED_OPERATIONS=true

# Maximum retry attempts for failed operations
VITE_MAX_RETRY_ATTEMPTS=3

# ===== PERFORMANCE =====
# Enable performance monitoring (true/false)
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Performance metrics collection interval (milliseconds)
VITE_PERFORMANCE_METRICS_INTERVAL=10000

# Enable audio worklet (true/false) - recommended over deprecated ScriptProcessor
VITE_ENABLE_AUDIO_WORKLET=true

# Audio worklet script path
VITE_AUDIO_WORKLET_SCRIPT=/audio-processor.js

# Audio send throttling for slower hardware (milliseconds) - optimized for whisper-streaming
VITE_SEND_THROTTLE_MS=50

# WebSocket ping interval to prevent timeouts (milliseconds) - optimized for whisper-streaming
VITE_WEBSOCKET_PING_INTERVAL=30000

# ===== BROWSER COMPATIBILITY =====
# Fallback to ScriptProcessor if AudioWorklet not supported (true/false)
VITE_FALLBACK_TO_SCRIPT_PROCESSOR=true

# Enable WebRTC audio constraints (true/false)
VITE_ENABLE_WEBRTC_CONSTRAINTS=true

# Audio constraints - echo cancellation (true/false)
VITE_AUDIO_ECHO_CANCELLATION=true

# Audio constraints - noise suppression (true/false)
VITE_AUDIO_NOISE_SUPPRESSION=true

# Audio constraints - auto gain control (true/false)
VITE_AUDIO_AUTO_GAIN_CONTROL=true

# ===== SESSION MANAGEMENT =====
# Default meeting ID prefix
VITE_DEFAULT_MEETING_ID_PREFIX=meeting

# Default speaker name
VITE_DEFAULT_SPEAKER_NAME=Host

# Generate unique session IDs (true/false)
VITE_GENERATE_UNIQUE_SESSION_IDS=true

# Session ID length for generated IDs
VITE_SESSION_ID_LENGTH=8

# ===== DEVELOPMENT/TESTING =====
# Enable debug mode (true/false)
VITE_DEBUG_MODE=false

# Enable console logging (true/false)
VITE_ENABLE_CONSOLE_LOGGING=true

# Log level (error, warn, info, debug)
VITE_LOG_LEVEL=info

# Enable mock data for testing (true/false)
VITE_ENABLE_MOCK_DATA=false

# Mock transcription delay (milliseconds)
VITE_MOCK_TRANSCRIPTION_DELAY=2000

# ===== ACCESSIBILITY =====
# Enable keyboard shortcuts (true/false)
VITE_ENABLE_KEYBOARD_SHORTCUTS=true

# Enable screen reader support (true/false)
VITE_ENABLE_SCREEN_READER_SUPPORT=true

# High contrast mode (true/false)
VITE_HIGH_CONTRAST_MODE=false